@model StockServer.Models.OfferViewModels.PlaceOffersViewModel

@{
    ViewData["Title"] = "Offers";
}

<h2>Offers</h2>

<p>
    <a asp-action="Create" asp-area="" asp-route-placeId="@Model.PlaceId">Create New</a>
</p>

<ul class="list-group">
    @foreach(var item in Model.Offers)
    {
        <li class="list-group-item">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-1">
                        <div class="image">
                            <img src="@item.LogoUrl" style="width:30px;height:30px" />
                        </div>
                    </div>
                    <div class="col-xs-8">
                        <div class="text-left">
                            <strong>@item.Title</strong>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div class="text-right button">
                            <a asp-action="AddOfferItems" asp-area="" asp-route-offerId="@item.Id" asp-route-placeId="@Model.PlaceId">
                                <span class="glyphicon glyphicon-plus listitem-action" aria-hidden="true"></span>
                            </a>
                            <a asp-action="Update" asp-area="" asp-route-Id="@item.Id">
                                <span class="glyphicon glyphicon-pencil listitem-action" aria-hidden="true"></span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </li>

    }
</ul>
