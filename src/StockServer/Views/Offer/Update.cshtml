@model StockServer.Models.Common.OfferViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Update</h2>

<form asp-action="Update" asp-area="">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.PlaceId)
        <div class="form-group">
            <label asp-for="@Model.Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Title" class="form-control" />
                <span asp-validation-for="@Model.Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.Description" class="form-control" />
                <span asp-validation-for="@Model.Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.LogoUrl" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="@Model.LogoUrl" class="form-control" />
                <span asp-validation-for="@Model.LogoUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Price" class="col-md-2 control-label">@Model.Price</label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="@Model.IsActive" />
                    <label asp-for="@Model.IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" asp-area="" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="PlaceOffers" asp-area="" asp-route-id="@Model.PlaceId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
