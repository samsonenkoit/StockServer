@model StockServer.BL.Model.Purchase

@{
    ViewData["Title"] = "Delivery";
}

<h2>Create</h2>

<form asp-action="DeliverPurchase" asp-area="">
    <div class="form-horizontal">
        <h4>Purchase</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.HiddenFor(model => model.Offer.PlaceId);
        @Html.HiddenFor(model => model.OfferTransactionId);
        <div class="form-group">
            <label asp-for="@Model.Offer.Title" class="col-md-2 control-label"></label>
            <label>@Model.Offer.Title</label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Offer.Description" class="col-md-2 control-label"></label>
            <label>@Model.Offer.Description</label>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Amount" class="col-md-2 control-label"></label>
            <label>@Model.Amount</label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deliver" asp-area="" asp-action="DeliverPurchase" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
