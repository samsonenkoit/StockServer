@model StockServer.BL.Model.Purchase

@{
    ViewData["Title"] = "Delivery";
}

<h2>Delivery</h2>

<form asp-action="DeliverPurchase" asp-area="">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        @Html.HiddenFor(model => model.Offer.PlaceId)
        @Html.HiddenFor(model => model.OfferTransactionId)
        <div class="form-group">
            <label class="col-md-2 control-label">Offer name:</label>
            @Model.Offer.Title
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Offer description:</label>
            @Model.Offer.Description
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Amount:</label>
            @Model.Amount
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">User:</label>
            @Model.UserName
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Deliver" asp-area="" asp-action="DeliverPurchase" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="PlacePurchase" asp-area="" asp-route-id="@Model.Offer.PlaceId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
