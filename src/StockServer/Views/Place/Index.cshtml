@model IEnumerable<StockServer.Models.Common.PlaceViewModel>

@{
    ViewData["Title"] = "Places";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                <p>
                    <a asp-action="PlaceOffers" asp-area="" asp-controller="offer" asp-route-id="@item.Id">Offers</a>
                </p>
                <p>
                    <a asp-action="PlacePurchase" asp-area="" asp-controller="offer" asp-route-id="@item.Id">Purchase</a>
                </p>
            </td>
            
        </tr>
}
    </tbody>
</table>
